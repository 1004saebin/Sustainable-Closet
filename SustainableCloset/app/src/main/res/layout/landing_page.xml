<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundCyan"
        tools:context=".LandingActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_face_black_24dp" />

    <Button
        android:id="@+id/upload_outfit"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_white"
        android:drawableTop="@drawable/ic_add_a_photo_black_24dp"
        android:onClick="uploadImage"
        android:padding="10dp"
        android:text="Upload Outfit"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/outfit_recommender"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_white"
        android:drawableTop="@drawable/ic_face_black_24dp"
        android:onClick="outfitRecOnClick"
        android:padding="10dp"
        android:text="Outfit Recommender"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/eco_friendliness"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg_white"
        android:drawableTop="@drawable/ic_spa_black_24dp"
        android:padding="10dp"
        android:text="Eco-Friendliness Score"
        android:textColor="@color/green" />

</LinearLayout>



